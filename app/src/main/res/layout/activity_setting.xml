<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:phone="http://schemas.android.com/apk/res/com.prolik.android.mobilesecurity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>

    <com.prolik.android.mobilesecurity.view.SettingItemView
        android:id="@+id/si_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        phone:desc_off="自动更新已关闭"
        phone:desc_on="自动更新已开启"
        phone:title_info="自动更新设置">

    </com.prolik.android.mobilesecurity.view.SettingItemView>
    <com.prolik.android.mobilesecurity.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        phone:desc_off="归属地显示已关闭"
        phone:desc_on="归属地显示已开启"
        phone:title_info="电话归属地显示设置">

    </com.prolik.android.mobilesecurity.view.SettingItemView>
    <com.prolik.android.mobilesecurity.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        phone:desc_off="黑名单更新已关闭"
        phone:desc_on="黑名单更新已开启"
        phone:title_info="黑名单更新设置" />

    <com.prolik.android.mobilesecurity.view.SettingItemArrowView
        android:id="@+id/siav_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.prolik.android.mobilesecurity.view.SettingItemArrowView>

    <com.prolik.android.mobilesecurity.view.SettingItemArrowView
        android:id="@+id/siav_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.prolik.android.mobilesecurity.view.SettingItemArrowView>
    <com.prolik.android.mobilesecurity.view.SettingItemArrowView
        android:id="@+id/siav_clear_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.prolik.android.mobilesecurity.view.SettingItemArrowView>
</LinearLayout>
